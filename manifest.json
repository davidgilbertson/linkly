{
    "manifest_version": 2,

    "name": "Linkly",
    "description": "Customise the behaviour of hyperlinks",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon-19x19.png",
        "default_popup": "popup.html",
        "default_title": "Linkly Options"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}